--
-- Table structure for table `user`
--

CREATE TABLE `user` (
  `userId` int not null primary key AUTO_INCREMENT,
  `username` varchar(50) unique,
  `phonenumber` varchar(11) unique,
  `name` varchar(50),
  `teamcolor` varchar(10),
  `health` varchar(3),
  `ticket` varchar(3),
  `score` varchar(4) 

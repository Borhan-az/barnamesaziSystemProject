);

--
-- Table structure for table `question`
--

CREATE TABLE `question` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `question` varchar(300),
  `answer1` varchar(100) ,
  `answer2` varchar(100) ,
  `answer3` varchar(100) ,
  `answer4` varchar(100) ,
  `currect` tinyint,
  PRIMARY KEY (`id`)
);

